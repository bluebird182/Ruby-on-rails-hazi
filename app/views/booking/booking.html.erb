<h1>Foglalások kezelése</h1>

    <div class="container">
        <div class="row">
            <div class="col col-6 col-sm-4">
                <form method="post">
                    <div class="form-group">
                        <label for="day">Válassz egy napot!</label>
                        <input type="title" class="form-control" id="day" name="day" required>
                    </div>
            </div>
        </div>
        <div class="row">
                <div class="col col-6 col-sm-4">
                    <div class="form-group">
                        <label for="time">Szabad időpontok:</label>
                        <input type="genert" class="form-control" id="time" name="time" required>
                    </div>
                </div>
        </div>
        <div class="row">
        <div class="col col-6 col-sm-4">
            <div class="form-group">
                <label for="people">Szabad helyek:</label>
                <input type="title" class="form-control" id="people" name="people" required>
            </div>
        </div>
        </div>
        <div class="row">
        <div class="col col-6 col-sm-4">
            <div class="form-group">
                <label for="name">Név:</label>
                <input type="title" class="form-control" id="name" name="name" required>
            </div>
        </div>
        </div>
        <div class="row">
        <div class="col col-6 col-sm-4">
            <div class="form-group">
                <label for="mobil">Telefonszám:</label>
                <input type="title" class="form-control" id="mobil" name="mobil" required>
            </div>
        </div>
        </div>
        
        <div class="row">
            <div class="col col-4 col-sm-2">
            </div>
            <div class="col col-8 col-sm-2">
            <button type="submit" href="/booking" class="btn btn-primary bg-secondary border-secondary">Foglalás</button>
            </div>    
        </form>
        </div>
        </div>
    </div>

